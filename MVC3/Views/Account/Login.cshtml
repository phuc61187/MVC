@model MVC3.Models.UserLogin
@{
    ViewBag.Title = "Login";
}

<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Đăng nhập hệ thống</h1>
                            </div>
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data", @class = "user" })) {
                                @Html.AntiForgeryToken()
                                <div class="col-md-10">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @*<input type="text" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Nhập Username">*@
                                    @Html.TextBox("UserName", null, htmlAttributes: new { @class = "form-control form-control-user", @placeholder = "Nhập Username" })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @*<input type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Nhập Password">*@
                                    @*@Html.EditorFor(model => model.UserName, new { @class = "form-control form-control-user"@*, @placeholder = "Nhập Username"*@
                                    @Html.Password("Password", null, new { @class = "form-control form-control-user", @placeholder = "Nhập Password" })
                                </div>
                                <div>
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox small">
                                        <input type="checkbox" class="custom-control-input" id="customCheck">
                                        <label class="custom-control-label" for="customCheck">Nhớ cho lần đăng nhập sau</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Đăng nhập" class="btn btn-primary btn-user btn-block" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Bootstrap core JavaScript-->
<script src="vendor/jquery/jquery.min.js"></script>
<script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- Core plugin JavaScript-->
<script src="vendor/jquery-easing/jquery.easing.min.js"></script>
<!-- Custom scripts for all pages-->
<script src="js/sb-admin-2.min.js"></script>


