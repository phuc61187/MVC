@model IEnumerable<MVC3.Models.Account>

@{
    ViewBag.Title = "QUẢN LÝ TÀI KHOẢN";
}

<h2>QUẢN LÝ TÀI KHOẢN</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDUserInfo)
        </th>
        <th></th>
    </tr>
    @if (Model == null || Model.Count() == 0) {
        <tr>
            <td>Chưa có tài khoản.</td>
        </tr>
        } else {
            foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserInfo.LastName)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.UserName }) |
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.UserName }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.UserName })
                    </td>
                </tr>
            }
            
        }

</table>
